<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="14dp">

        <ImageView
            android:src="@drawable/ic_img_placeholder"
            android:contentDescription="@string/image_of_feeds"
            android:id="@+id/image_view"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_view"
            android:layout_toStartOf="@+id/image_view"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Title"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="Source"
                android:textColor="@color/secondary_text"
                android:textSize="10sp"
                tools:ignore="HardcodedText,MissingPrefix,SmallSp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="8dp"
                android:textColor="@color/secondary_text"

                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/source"
                android:layout_toRightOf="@+id/source"
                android:text="date"
                android:textSize="10sp"
                tools:ignore="SmallSp" />


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/image_view"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/primary_light" />

</androidx.cardview.widget.CardView>

